/*index.wxss**/
.zz-container-scroll-view {
  margin-bottom: 100rpx;
}
.zz-container-tabbar {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-content: center;
  /* border: 1px solid  #ccc; */
}
.zz-container-tabbar_item {
  /* background: #fff; */
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column-reverse;
  color: #000;
  line-height: 55rpx;
}
.active {
  text-align: center;
  color: #000;
  flex: 1;
  font-weight: bold;
  font-size: 30rpx;
}
.default {
  text-align: center;
  flex: 1;
  color: #eee;
  font-weight: bold;
  font-size: 28rpx;
}
.zz-container-tabbar_item--text-active {
  color: orangered;
}
.zz-container-tabbar_item--text {
  font-size: 24rpx;
  line-height: 35rpx;
  color: #5f5f5f;
}
.iconPath {
  width:54rpx;
  height: 54rpx;
}